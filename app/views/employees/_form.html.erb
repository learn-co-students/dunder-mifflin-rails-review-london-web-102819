<%= form_for(@employee) do |f|%>

    <% if @employee.errors.any? %>
        <h4>The following errors occured:</h4>
        <div class="error_explanation">
            <% @employee.errors.each do |k,v|%>
                <p><%= [k.to_s.capitalize, v].join(" ") %></p>
            <% end %>
        </div>
    <% end %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name%><br>

    <%= f.label :last_name %>
    <%= f.text_field :last_name%><br>

    <%= f.label :alias %>
    <%= f.text_field :alias%><br>

    <%= f.label :title %>
    <%= f.text_field :title%><br>

    <%= f.label :link_to_image %>
    <%= f.text_field :img_url%><br>

    <%= f.label :office %>
    <%= f.text_field :office %><br>

    <%= f.label :dog %>
    <%= f.collection_select :dog_id, Dog.all, :id, :name%><br>

    <%= f.submit %>

<% end %>